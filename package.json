{
  "name": "vscode-openai-agent",
  "displayName": "OpenAI Agent",
  "description": "AI coding assistant powered by OpenAI Assistants API",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Machine Learning",
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/es-ua/vscode-openai-agent"
  },
  "contributes": {
    "commands": [
      {
        "command": "vscode-openai-agent.enable",
        "title": "OpenAI Agent: Enable"
      },
      {
        "command": "vscode-openai-agent.disable",
        "title": "OpenAI Agent: Disable"
      },
      {
        "command": "vscode-openai-agent.setApiKey",
        "title": "OpenAI Agent: Set API Key"
      },
      {
        "command": "vscode-openai-agent.resetContext",
        "title": "OpenAI Agent: Reset Context"
      },
      {
        "command": "vscode-openai-agent.resetAssistant",
        "title": "OpenAI Agent: Reset Assistant"
      },
      {
        "command": "vscode-openai-agent.toggleMode",
        "title": "OpenAI Agent: Toggle Mode (Agent/Ask)"
      },
      {
        "command": "vscode-openai-agent.ask",
        "title": "Ask AI about code at cursor",
        "icon": "$(sparkle)"
      },
      {
        "command": "vscode-openai-agent.reloadMcp",
        "title": "OpenAI Agent: Reload MCP Servers"
      },
      {
        "command": "vscode-openai-agent.showPanel",
        "title": "OpenAI Agent: Show Panel",
        "icon": "$(sparkle)"
      }
    ],
    "configuration": {
      "title": "OpenAI Agent",
      "properties": {
        "openaiAgent.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the OpenAI Agent"
        },
        "openaiAgent.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "enum": [
            "gpt-4o",
            "gpt-4o-mini",
            "gpt-4.1",
            "gpt-4.1-mini"
          ],
          "description": "OpenAI model to use for code suggestions"
        },
        "openaiAgent.maxTokens": {
          "type": "number",
          "default": 1000,
          "description": "Maximum number of tokens for code completion"
        },
        "openaiAgent.mode": {
          "type": "string",
          "default": "agent",
          "enum": [
            "agent",
            "ask"
          ],
          "description": "Interaction mode: agent (proactive inline completions) or ask (on-demand)"
        },
        "openaiAgent.mcp.servers": {
          "type": "array",
          "default": [],
          "description": "External MCP servers to launch and expose as tools",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "command": {
                "type": "string"
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "cwd": {
                "type": "string"
              },
              "env": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "tools": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "method": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "parameters": {
                      "type": "object"
                    }
                  },
                  "required": [
                    "name"
                  ]
                }
              }
            },
            "required": [
              "id",
              "command"
            ]
          }
        },
        "openaiAgent.confirmWrites": {
          "type": "string",
          "default": "always",
          "enum": [
            "always",
            "agentOnly",
            "chatOnly",
            "never"
          ],
          "description": "When to show confirmation before write/delete operations (via MCP tools)"
        },
        "openaiAgent.writeWhitelist": {
          "type": "array",
          "default": [],
          "description": "List of trusted paths/globs where write/delete operations are allowed without confirmation",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "views": {
      "openaiAgent-sidebar": [
        {
          "id": "openaiAgent.chatView",
          "name": "OpenAI Agent",
          "type": "webview",
          "contextualTitle": "OpenAI Agent",
          "when": "true"
        }
      ],
      "panel": [
        {
          "id": "openaiAgent.panelView",
          "name": "OpenAI Agent",
          "type": "webview",
          "contextualTitle": "OpenAI Agent",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openaiAgent-sidebar",
          "title": "OpenAI Agent",
          "icon": "media/icon.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vscode-openai-agent.toggleMode",
          "when": "view == openaiAgent.chatView || view == openaiAgent.panelView",
          "group": "navigation@1"
        }
      ],
      "editor/title": [
        {
          "command": "vscode-openai-agent.ask",
          "group": "navigation@9",
          "when": "editorTextFocus",
          "icon": "$(sparkle)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/vscode": "^1.84.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "publisher": "esso"
}
