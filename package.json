{
  "icon": "media/logo.png",
  "name": "vscode-openai-agent",
  "displayName": "OpenAI Agent",
  "description": "AI coding assistant powered by OpenAI Chat Completions API",
  "version": "0.5.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "ai",
    "openai",
    "assistant",
    "coding",
    "autocomplete",
    "mcp",
    "agent",
    "audio",
    "mp3",
    "mp4"
  ],
  "license": "MIT",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/es-ua/vscode-openai-agent"
  },
  "homepage": "https://esso.dev",
  "contributes": {
    "commands": [
      {
        "command": "vscode-openai-agent.enable",
        "title": "OpenAI Agent: Enable"
      },
      {
        "command": "vscode-openai-agent.disable",
        "title": "OpenAI Agent: Disable"
      },
      {
        "command": "vscode-openai-agent.setApiKey",
        "title": "OpenAI Agent: Set API Key"
      },
      {
        "command": "vscode-openai-agent.resetContext",
        "title": "OpenAI Agent: Reset Context"
      },
      {
        "command": "vscode-openai-agent.ask",
        "title": "Ask AI about code at cursor",
        "icon": "$(sparkle)"
      },
      {
        "command": "vscode-openai-agent.reloadMcp",
        "title": "OpenAI Agent: Reload MCP Servers"
      },
      {
        "command": "vscode-openai-agent.showPanel",
        "title": "OpenAI Agent: Show Panel",
        "icon": "$(sparkle)"
      },
      {
        "command": "vscode-openai-agent.indexCode",
        "title": "OpenAI Agent: Index Code for RAG"
      }
    ],
    "configuration": {
      "title": "OpenAI Agent",
      "properties": {
        "openaiAgent.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the OpenAI Agent"
        },
        "openaiAgent.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "enum": [
            "gpt-4o",
            "gpt-4o-mini",
            "gpt-4-turbo",
            "gpt-4-turbo-preview",
            "gpt-4",
            "gpt-3.5-turbo"
          ],
          "description": "OpenAI model to use for code suggestions"
        },
        "openaiAgent.maxTokens": {
          "type": "number",
          "default": 1000,
          "description": "Maximum number of tokens for code completion"
        },
        "openaiAgent.mode": {
          "type": "string",
          "default": "agent",
          "enum": [
            "agent",
            "ask"
          ],
          "description": "Interaction mode: agent (proactive inline completions) or ask (on-demand)"
        },
        "openaiAgent.mcp.servers": {
          "type": "array",
          "default": [],
          "description": "External MCP servers to launch and expose as tools",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "command": {
                "type": "string"
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "cwd": {
                "type": "string"
              },
              "env": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "tools": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "method": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "parameters": {
                      "type": "object"
                    }
                  },
                  "required": [
                    "name"
                  ]
                }
              }
            },
            "required": [
              "id",
              "command"
            ]
          }
        },
        "openaiAgent.confirmWrites": {
          "type": "string",
          "default": "always",
          "enum": [
            "always",
            "agentOnly",
            "chatOnly",
            "never"
          ],
          "description": "When to show confirmation before write/delete operations (via MCP tools)"
        },
        "openaiAgent.writeWhitelist": {
          "type": "array",
          "default": [],
          "description": "List of trusted paths/globs where write/delete operations are allowed without confirmation",
          "items": {
            "type": "string"
          }
        },
        "openaiAgent.rag.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable RAG (Retrieval-Augmented Generation) features"
        },
        "openaiAgent.rag.autoIndex": {
          "type": "boolean",
          "default": true,
          "description": "Automatically index code files for RAG"
        },
        "openaiAgent.rag.excludePatterns": {
          "type": "array",
          "default": [
            "node_modules/**",
            ".git/**",
            "dist/**",
            "build/**",
            "out/**"
          ],
          "description": "Patterns to exclude from code indexing",
          "items": {
            "type": "string"
          }
        },
        "openaiAgent.audio.maxFileSize": {
          "type": "number",
          "default": 26214400,
          "description": "Maximum audio file size in bytes (default: 25MB)"
        },
        "openaiAgent.audio.allowedTypes": {
          "type": "array",
          "default": [
            "audio/mp3",
            "audio/mpeg",
            "audio/mp4",
            "video/mp4",
            "audio/m4a",
            "audio/x-m4a"
          ],
          "description": "Allowed audio file MIME types",
          "items": {
            "type": "string"
          }
        },
        "openaiAgent.audio.transcriptionLanguage": {
          "type": "string",
          "default": "",
          "description": "Default language for audio transcription (e.g., 'ru', 'en', 'es'). Leave empty for auto-detection"
        }
      }
    },
    "views": {
      "openaiAgent-sidebar": [
        {
          "id": "openaiAgent.chatView",
          "name": "Chat",
          "type": "webview",
          "contextualTitle": "OpenAI Agent Chat",
          "when": "true",
          "icon": "media/icon.svg"
        },
        {
          "id": "openaiAgent.decisionsView",
          "name": "Decisions",
          "type": "webview",
          "contextualTitle": "Project Decisions",
          "when": "true",
          "icon": "media/icon.svg"
        },
        {
          "id": "openaiAgent.contextSearchView",
          "name": "Context Search",
          "type": "webview",
          "contextualTitle": "Search Code & Context",
          "when": "true",
          "icon": "media/icon.svg"
        }
      ],
      "openaiAgent-panel": [
        {
          "id": "openaiAgent.panelView",
          "name": "âœ¨[</>]",
          "type": "webview",
          "contextualTitle": "OpenAI Agent",
          "when": "true",
          "icon": "media/icon.svg"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openaiAgent-sidebar",
          "title": "OpenAI Agent",
          "icon": "media/icon.svg"
        }
      ],
      "panel": [
        {
          "id": "openaiAgent-panel",
          "title": "OpenAI Agent",
          "icon": "media/icon.svg"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "vscode-openai-agent.ask",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "vscode-openai-agent.showPanel",
          "when": "view == openaiAgent.chatView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run webpack",
    "compile": "tsc -p ./ && cp src/panels/*.js out/panels/ && cp src/panels/*.css out/panels/",
    "webpack": "webpack --mode production",
    "webpack:dev": "webpack --mode development",
    "lint": "eslint src --ext ts",
    "watch": "webpack --watch --mode development",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@langchain/openai": "^0.0.14",
    "@types/axios": "^0.9.36",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.34",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "chromadb": "^1.10.5",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "langchain": "^0.1.37",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.1.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "form-data": "^4.0.0"
  },
  "extensionDependencies": [],
  "bundleDependencies": false
}
